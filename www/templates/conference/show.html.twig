{% extends 'base.html.twig' %}

{% block title %}Conference Guestbook - {{ conference }}{% endblock %}

{% block body %}
    <div class="example-wrapper">
        <h2>{{ conference }}</h2>
        {% for comment in comments %}
            <h3>{{ comment.author }}</h3>
            <p>{{ comment.text }}</p>
        {% endfor %}

        {% if previous >= 0 %}
            <a href="{{ path('conference',{ slug:conference.id ,offset:previous}) }}">
                Previous
            </a>
        {% endif %}
        {% if next < comments | length %}
            <a href="{{ path('conference',{ slug:conference.id ,offset:next}) }}">
                Next
            </a>
        {% endif %}
    </div>
{% endblock %}
